#include<stdio.h>
#include<stdlib.h>
#include"/home/elisabeth/projet sgbd/JSON_checker.h"


int validationJson (FILE * doc_Json)
{
	int caractere;
	JSON_checker jc = new_JSON_checker(40);
 	if(doc_Json!=NULL)
 	{
 		while (1)//si la condition est tjrs verifiee
	 	{
	 		c= fgetc(fichierJson);//cette fonction verifie le fic caractere par caractere
	 		if(feof(fichierJson)) break;
		}
        	if (caractere<= 0) break;
       		if (!JSON_checker_char(jc, caractere)) 
       		{
	            fprintf(stderr, "JSON_checker_char: Il y'a une erreur syntaxique \n");
	            exit(1);
        	}
    	}

    	if (!JSON_checker_done(jc)) 
    	{
	        fprintf(stderr, "JSON_checker_end: Il y'a une erreur syntaxique \n");
	       exit(1);
	 	fclose(doc_Json);
 	}

 	else printf("le fichier n'est pas ouvert\n");

}
